# Server Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=/api

# Database Configuration
# PostgreSQL (for accounting, users, roles)
DATABASE_URL="postgresql://postgres:password@localhost:5432/nakl_logistics?schema=public"

# MongoDB (for shipments, documents, logs)
MONGODB_URI="mongodb://localhost:27017/nakl_logistics"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Nakl Logistics <noreply@nakl.com>"

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AI Translation Service
AI_TRANSLATION_API_KEY=your_ai_translation_key
AI_TRANSLATION_MODEL=gpt-4

# Currency
DEFAULT_CURRENCY=EGP
CURRENCY_SYMBOL=ج.م

# GPS Tracking
GPS_PROVIDER=google
GPS_API_KEY=your_gps_api_key

# App Configuration
APP_URL=http://localhost:3000
ADMIN_EMAIL=admin@nakl.com

# OpenTelemetry Tracing Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SERVICE_NAME=nakl-logistics-backend
